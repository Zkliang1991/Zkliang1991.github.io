/* components/shopping/shopping.wxss */
.content{
  margin-bottom: 120rpx;
}
.li {
  display: flex;
  width: 100%;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.15);
  padding: 20rpx 17rpx;
  align-items: center;
}

.cover {
  width: 200rpx;
  height: 200rpx;
  left: 20rpx;
  z-index: 2;
}

image {
  width: 100%;
  height: 100%;
}

.cont {
  width: 50%;
  margin-left: 20rpx;
}

.cont .word {
  margin-top: 24rpx;
  font-size: 24rpx;
}

.cont .pricebox {
  margin-top: 16rpx;
  line-height: 160rpx;
  height: 160rpx;
  font-size: 24rpx;
  display: flex;
}

.pricebox input {
  /* background: rgba(255, 255, 255, 0.95); */
  border: 2rpx solid #000;
  width: 50rpx;
  /* height: 10rpx; */
  text-align: center;
  /* font-size: 20rpx; *//* line-height: 10rpx; */
  display: inline-block;
}


.pricebox .numbox {
  display: flex;
  align-items: center;
  margin-left: 150rpx;
}

.pricebox> text{
  color:rgb(212, 40, 40);
}

.del {
  font-size: 24rpx;
  color: rgb(219, 31, 31);
}

.footer{
   position: fixed;
    /* margin-bottom: 180rpx; */
    bottom: 0;
    z-index: 99;
    background: #fff;
    width: 100%;
    height: 120rpx;
    border-top: 2rpx solid #f7f8f9;
    line-height: 120rpx;
    font-size:26rpx;
}

.price{
  margin-left:100rpx;
}

.reduce{
  margin-right:10rpx;
}

.add{
  margin-left:10rpx;
}

.checkall{
  display: inline-block;
  margin-left:20rpx;
 
}